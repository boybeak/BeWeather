<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/real_time_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/bg_sunny"
        >
        <ImageView
            android:id="@+id/real_time_icon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/ic_weather_rain"
            />
        <TextView
            android:id="@+id/real_time_skycon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_toRightOf="@+id/real_time_icon"
            android:gravity="right"
            android:fontFamily="monospace"
            />
        <TextView
            android:id="@+id/real_time_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:layout_toRightOf="@+id/real_time_icon"
            android:layout_below="@+id/real_time_skycon"
            android:gravity="right"
            android:fontFamily="sans-serif-thin"
            />
        <TextView
            android:id="@+id/real_time_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="right"
            android:fontFamily="monospace"
            android:layout_below="@+id/real_time_temperature"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_real_time_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/real_time_key_style"
                android:text="@string/text_row_key_wind"
                />
            <TextView
                android:id="@+id/real_time_wind"
                android:gravity="right"
                style="@style/real_time_value_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                style="@style/real_time_key_style"
                android:text="@string/text_row_key_humidity"
                />
            <TextView
                android:id="@+id/real_time_humidity"
                android:gravity="right"
                style="@style/real_time_value_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            >
            <TextView
                style="@style/real_time_key_style"
                android:text="@string/text_row_key_pm25"
                />
            <TextView
                android:id="@+id/real_time_pm25"
                android:gravity="right"
                style="@style/real_time_value_style"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>